             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StockTrading.Desktop.SharedControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="Home" FontSize="20" HorizontalAlignment="Center" FontFamily="Bahnschrift" Foreground="Azure" Margin="10"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Algorithm" FontSize="20" HorizontalAlignment="Center" FontFamily="Bahnschrift" Foreground="Azure" Margin="10"></TextBlock>
        </StackPanel>
    </Grid>
